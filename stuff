#!/bin/bash

# Initialize the Kaniko command
kaniko_cmd="/kaniko/executor --context /path/to/context --dockerfile /path/to/dockerfile --destination your-registry/your-image:tag"

# Extract and add each build argument from the BUILD_ARGS environment variable
for arg in $BUILD_ARGS; do
  kaniko_cmd+=" --build-arg $arg"
done

# Execute the Kaniko command
eval $kaniko_cmd
