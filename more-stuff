update_environment_file() {
  token=$(cat /root/.vault-token)
  if grep -q "VAULT_TOKEN" /etc/environment; then
    # Update the existing token
    sed -i "s/^VAULT_TOKEN=.*/VAULT_TOKEN=$token/" /etc/environment
  else
    # Add the new token
    echo "VAULT_TOKEN=$token" >> /etc/environment
  fi
}
