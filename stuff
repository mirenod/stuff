check_secret_exists() {
  local secret_path="$1"
  
  # Use the Vault CLI to check if the secret exists
  if vault kv get "$secret_path" > /dev/null 2>&1; then
    echo "Secret exists at path: $secret_path"
    return 0
  else
    echo "Secret does not exist at path: $secret_path"
    return 1
  fi
}
